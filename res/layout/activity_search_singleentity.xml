<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dip"
    android:orientation="vertical" >
    
    <TextView 
        android:id="@+id/activity_search_singleentity_textview_normal"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <Button 
        android:id="@+id/activity_search_singleentity_textview_button"
        android:text="@string/activity_search_singleentity_textview_button"
        style="?android:textAppearanceSmall"
        android:layout_marginTop="20dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_width="wrap_content" />
    
	<TextView 
	    android:id="@+id/activity_search_singleentity_textview_secrets"
	    android:textSize="20sp"
	    android:layout_marginTop="20dip"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@layout/textview_sensible"
	    android:visibility="gone" />
	
</LinearLayout>
