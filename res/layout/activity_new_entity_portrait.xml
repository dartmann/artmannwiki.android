<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="de.davidartmann.artmannwiki.android.NewEntity">

    <TextView
        android:text="@string/action_new_entity_question"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageButton
        android:contentDescription="@string/action_new_entity_login"
        android:id="@+id/new_entity_button_login"
        android:layout_marginTop="10sp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/login"
        android:layout_width="128sp"
        android:layout_height="128sp" />
    <TextView
        android:text="@string/action_new_entity_login"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageButton
        android:contentDescription="@string/action_new_device"
        android:id="@+id/new_entity_button_device"
        android:layout_marginTop="10sp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/device"
        android:layout_width="128sp"
        android:layout_height="128sp" />
    <TextView
        android:text="@string/action_new_device"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageButton
        android:contentDescription="@string/action_hint_mail"
        android:id="@+id/new_entity_button_mail"
        android:layout_marginTop="10sp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/mail"
        android:layout_width="128sp"
        android:layout_height="128sp" />
    <TextView
        android:text="@string/action_hint_mail"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
